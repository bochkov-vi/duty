<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!--<environmentMode>FULL_ASSERT</environmentMode>--><!-- To slowly prove there are no bugs in this code -->
    <!--<moveThreadCount>AUTO</moveThreadCount>--><!-- To solve faster by saturating multiple CPU cores -->

    <solutionClass>com.bochkov.duty.planning.DutyPlan</solutionClass>
    <entityClass>com.bochkov.duty.planning.DutyAssigment</entityClass>

    <scoreDirectorFactory>
        <constraintProviderClass>com.bochkov.duty.planning.DutyConstraintProvider</constraintProviderClass>
    </scoreDirectorFactory>

    <constructionHeuristic>
        <constructionHeuristicType>CHEAPEST_INSERTION</constructionHeuristicType>
    </constructionHeuristic>
    <termination>
        <secondsSpentLimit>300</secondsSpentLimit>
        <!--<scoreCalculationCountLimit>1000</scoreCalculationCountLimit>-->
    </termination>

    <environmentMode>FAST_ASSERT</environmentMode>
    <localSearch>

        <acceptor>
            <lateAcceptanceSize>400</lateAcceptanceSize>
            <entityTabuSize>5</entityTabuSize>
        </acceptor>
        <forager>
            <acceptedCountLimit>1</acceptedCountLimit>
        </forager>
        <termination>
            <secondsSpentLimit>100</secondsSpentLimit>
<!--            <unimprovedSecondsSpentLimit>3</unimprovedSecondsSpentLimit>-->
            <!--<scoreCalculationCountLimit>1000</scoreCalculationCountLimit>-->
        </termination>
    </localSearch>


    <localSearch>
        <localSearchType>HILL_CLIMBING</localSearchType>
        <termination>
            <secondsSpentLimit>100</secondsSpentLimit>
            <!--<unimprovedSecondsSpentLimit>3</unimprovedSecondsSpentLimit>-->
        </termination>
    </localSearch>


    <localSearch>
        <localSearchType>TABU_SEARCH</localSearchType>
        <termination>
            <secondsSpentLimit>100</secondsSpentLimit>
           <!-- <unimprovedSecondsSpentLimit>3</unimprovedSecondsSpentLimit>-->
        </termination>
    </localSearch>


</solver>
